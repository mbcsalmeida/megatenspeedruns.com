---
import { Image } from "astro:assets";
import { LinkButton } from "@astrojs/starlight/components";

const {
    title,
    imagePath,
    url,
    alt = "Background Image",
    ...attributes
} = Astro.props;
---

<div class="hero">
    <Image src={imagePath} , alt={alt} , class="background" />
    <div class="content">
        <h1>{title}</h1>
        <LinkButton href={url} variant="primary">
            <slot />
        </LinkButton>
    </div>
</div>

<style>
    .hero {
        width: 100%;
        height: 10%;
        position: relative;
        overflow: hidden;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    a {
        text-decoration: none;
        color: white;
    }

    .background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        overflow: hidden;
        z-index: -1;
        opacity: 0.8; /* Adjust for visibility */
        object-fit: cover;
    }

    h1 {
        font-weight: 600;
        z-index: 1;
        text-align: center;
        color: white;
    }

    .content {
        display: inline-flex;
        flex-direction: row;
        align-items: center;
        gap: 0.5rem;
        text-align: center;
        text-shadow: 0 0 10px rgba(0, 0, 0, 0.9);
    }
</style>
